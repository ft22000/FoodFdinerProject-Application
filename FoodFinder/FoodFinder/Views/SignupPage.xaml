<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodFinder.Views.SignupPage"
             Title="Signup">

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="15"/>
            <On Platform="Android" Value="15"/>
        </OnPlatform>
    </ContentPage.Padding>

    <!--Help label with gesture recogniser-->
    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Default" Priority="0" Icon="question.png" Clicked="ShowHideTips" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <StackLayout x:Name="signUpLayout" Orientation="Vertical">
                <!--JH: The image of the UTAS Logo-->
                <Image x:Name="utasLogo"
                                Source="logoSideBySide.png"/>

                <!--JH: Sustainability Team's Moto-->
                <Label x:Name="motto"
                                Text="Simple Actions Towards Sustainability"
                                HorizontalOptions="CenterAndExpand"
                                FontSize="Small"/>

                <ScrollView Style="{StaticResource scollViewMargin}">
                    <StackLayout>
                        <!--JH: A field for the user to submit their email-->
                        <Entry x:Name="email"
                                Placeholder="Email*"
                                Keyboard="Email"/>

                        <Label x:Name="emailToolTip"
                               Text="Please enter your University of Tasmania email. This is a compulsory field."
                               Style="{StaticResource toolTipLabel}"/>

                        <StackLayout x:Name="showPasswordLayout" Orientation="Horizontal" Margin="0" Padding="0">
                            <!--EDH: Password input-->
                            <Entry x:Name="password"
                                    Placeholder="Password*"
                                    IsPassword="True"
                                    HorizontalTextAlignment="LEft"
                                    TextChanged="PasswordUpdated"
                                    HorizontalOptions="FillAndExpand"/>
                            <!--TODO: Set Style Sheet Enty-->
                            <Image HorizontalOptions="End"
                                    VerticalOptions="Center"
                                    x:Name="ShowHidePasswordLabel"
                                    Source="hide.png"
                                    WidthRequest="20">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="ShowHidePassword"/>
                                </Image.GestureRecognizers>
                            </Image>
                        </StackLayout>

                        <!--TE: Password strength meter-->
                        <Frame x:Name="StrengthMeterContainer"
                               CornerRadius="5"
							   HasShadow="False"
                               BackgroundColor="Gray"
                               HorizontalOptions="FillAndExpand"
                               Padding="0">
                            <BoxView x:Name="StrengthIndicator"
                                     HorizontalOptions="StartAndExpand"
                                     BackgroundColor="Red"
                                     HeightRequest="5"
                                     WidthRequest="0"/>
                        </Frame>

                        <StackLayout x:Name="adviceLayout" Orientation="Horizontal">
                            <Label x:Name="adviceLabel"
                                   HorizontalOptions="CenterAndExpand"
                                   FontSize="Small">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span x:Name="ConditionsAdvice" ForegroundColor="Blue"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </StackLayout>

                        <StackLayout x:Name="passwordToolTip" Style="{StaticResource toolTipStack}">
                            <Label Text="Your password needs to meet the following requirements:"
                                   Style="{StaticResource toolTipLabel}"
                                   IsVisible="True"/>
                            <Label Text="&#x2022; At least 8 or more characters long."
                                   Style="{StaticResource toolTipLabel}"
                                   IsVisible="True"/>
                            <Label Text="&#x2022; At least 1 must be an uppercase letter."
                                   Style="{StaticResource toolTipLabel}"
                                   IsVisible="True"/>
                            <Label Text="&#x2022; At least 1 must be a lowercase letter."
                                   Style="{StaticResource toolTipLabel}"
                                   IsVisible="True"/>
                            <Label Text="&#x2022; At least 1 must be a number."
                                   Style="{StaticResource toolTipLabel}"
                                   IsVisible="True"/>
                        </StackLayout>

                        <!--JH: A field for the user to submit their password again for confirmation-->
                        <Entry x:Name="passwordConfirm"
                               Placeholder="Confirm Password*"
                               IsPassword="True"/>

                        <!--JH: The Primary Campus of the user-->
                        <Picker x:Name="primaryCampus"
                                Title="Choose a primary campus*"
                                ItemDisplayBinding="{Binding Campus_Name}"/>

                        <Label x:Name="primaryCampusToolTip"
                                   Text="Your primary campus is where your map position will default to, and receive notifications from. This is a compulsory field."
                                   Style="{StaticResource toolTipLabel}"/>

                        <StackLayout x:Name="eulaLinkLayout" Orientation="Horizontal">
                            <!--JA: Link that display the EULA when tapped-->
                            <Label x:Name="agreementLink"
                                    HorizontalOptions="StartAndExpand"
                                    FontSize="Small">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="I agree to the "/>
                                        <Span Text="EULA" ForegroundColor="Blue"/>
                                    </FormattedString>
                                </Label.FormattedText>

                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnEULASelect"/>
                                </Label.GestureRecognizers>
                            </Label>

                            <!--JH: A switch to confirm that the user agrees to the EULA.
                                note: a slider of which it was allows for a scale, not a yes/no answer-->
                            <Switch x:Name="switchEULAcheck"
                                                IsEnabled="False"/>
                        </StackLayout>

                        <!--JH: A button to check the entries supplied by the user are valid for a new profile-->
                        <Button x:Name="buttonSignup"
                                        Text="Sign Up"
                                        Clicked="ClickedSignup"/>

                        <!-- JW: loading spinner; keep this as the last element until I sort out overlaying it over the other elements -->
                        <ActivityIndicator x:Name="loadingSpinner" IsRunning="false" />
                    </StackLayout>
                </ScrollView>
            </StackLayout>
 
            <!--Kim: Verification popup window-->
            <StackLayout IsVisible="False" x:Name="verificationCode">

                <Label Text="Verification Code" HorizontalOptions="Center"/>
                <Label Text="An email has been sent containing your verification code. Please enter it below to verify your account."/>
                <Entry x:Name="Code" HorizontalOptions="FillAndExpand" Placeholder="Verification Code"/>

                <Button x:Name="verifyButton" Text="Verify Code" Clicked="CheckVerification" />
                <Button Text="Close" Clicked="PopupReturn"/>

                <ActivityIndicator x:Name="loadingSpinnerVerification" IsRunning="false" />
